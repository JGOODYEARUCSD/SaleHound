	<link href="js/bootstrap-3.3.2-dist/css/bootstrap.min.css" rel="stylesheet">
	<link href="js/bootstrap-3.3.2-dist/css/bootstrap-theme.min.css" rel="stylesheet">

	<script src="js/bootstrap-3.3.2-dist/js/bootstrap.js"> </script>

	<!-- JQuery (necessary for Bootstrap's Javascript plugins)-->
	<script type="text/javascript" src= "https://code.jquery.com/jquery.js"></script>

	<!-- Javascript file for the navigation bar-->
	<script src="js/header.js"></script>

	<!--- Link to external style sheet -->
	<link rel="stylesheet" type="text/css" href="css/style.css">
	<link rel="stylesheet" type="text/css" href="css/header.css">
</head>

<body>
	<div class="container">
	<!-- Buttons -->
		<div id ="sticker" class="cssmenu">
			<ul class="nav">
				<li><a href="/"><span>Home</span></a></li>
				<li><a href="/myStores"><span>My Stores</span></a></li>
				<li><a href="/allStores"><span>All Stores</span></a></li>
				<li class-"active"><a href="/account"><span>Manage Account</span></a></li>
				<li><a href="/saleWatch"><span>Sale Watch</span></a></li>
				<li class="last"><a href="/help"><span>Help</span></a></li>
			</ul>
		</div>
	
	<!-- Horizontal Rule -->
	<hr style="height:5px;border-color:black;background-color:black" />

	<!-- Sign In Banner -->
	<div align="center">
		<h1>Sign In to SaleHound!</h1>
	<form>
			<div class="form-group">
			User Name:<br>
			<input type="text" name="username" class="form-control">
			<br><br>
			Password:<br>
			<input type="password" name="password" class="form-control">
			<br><br>
			<b>Forgot Password?</b><br>Enter Your Email Address:<br>
			<input type="text" name="forgot" class="form-control">
			<br><br>
			<input type="submit" value="Submit" class="btn btn-default">
		</div>
	</form>
	</div>


	<!-- Sign Up Banner -->
	<div align="center">
		<h1>Sign Up for a New Account!</h1>
	<form role="form">
		<div class="form-group">
		User Name:<br>
		<input type="text" name="username" class="form-control">
		<br><br>
		Password:<br>
		<input type="password" name="password" class="form-control">
		<br><br>
		Email Address:<br>
		<input type="text" name="email" class="form-control">
		<br><br>
		</div>
		<input type="submit" value="Create" class="btn btn-default">
	</form>
	</div>
</div> <!-- End of Bootstrap container -->
